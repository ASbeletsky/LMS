@model LMS.Dto.TestSessionDTO
@{
    ViewData["Title"] = "Test session";
    ViewData["Action"] = "Edit";
    ViewData["Icon"] = "fa-edit";}

<div class="row">
    <div class="col-md-9 col-lg-8 col-xl-6">
        <form asp-action="Edit">
            @Html.Partial("FormFields", Model)
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="List">Back to List</a>
    <br />
    <a href="#" data-toggle="modal" data-target="#deleteModal" data-arg-id="@Model.Id">Delete</a>
</div>

@Html.Partial("Dialog", new DialogViewModel("deleteModal")
{
    Content = "Are you sure that you want to delete this session?",
    SubmitAction = "Delete",
    SubmitController = "TestSession"
})