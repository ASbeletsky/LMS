@model LMS.Dto.CategoryDTO

@{
    var categories = ((IEnumerable<SelectListItem>)ViewData["AvailableCategories"]);
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input asp-for="Id" type="hidden" />

<div class="form-group">
    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control" type="text">
    <span asp-validation-for="Title" lass="text-danger"></span>
</div>
<br>

@if ((int)ViewData["AmountChildrenCategories"] == 0)
{
    <div class="form-group ">
        <label asp-for="ParentCategoryId" class="control-label"></label>
        <select asp-for="ParentCategoryId" asp-items="@categories" class="form-control custom-select">
            <option selected="selected" asp-items="@null">    </option>
        </select>
        <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
    </div>}
else
{
    <h6>You can not chose parent for parent category</h6><br>
}

<div class="form-group">
    <input type="submit" value="Save" class="btn btn-default" />
</div>
